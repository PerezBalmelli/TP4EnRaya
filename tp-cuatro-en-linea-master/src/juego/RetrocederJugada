package juego;

import javafx.event.ActionEvent;
import javafx.event.EventHandler;

public class RetrocederJugada  implements EventHandler<ActionEvent> {
	
	private Tablero tablero;
	private CuatroEnLinea juego;
	
	
	/**
	 * post: asocia la acci√≥n de retroceder una jugada en el juego 'cuatroEnLinea' del tablero 'tableroCuatroEnLinea'
	 * 
	 * @param tableroCuatroEnLinea
	 * @param cuatroEnLinea
	 */
	public RetrocederJugada(Tablero tableroCuatroEnLinea, CuatroEnLinea cuatroEnLinea){
		
		tablero = tableroCuatroEnLinea;
		juego = cuatroEnLinea;
		
	}
	
	public void handle(ActionEvent evento) {
		juego.retrocederUnaJugada();
		tablero.dibujar();
	}
}
